@model IEnumerable<GeeksForLessForum.Models.TopicMessageViewModel>

@if (Model != null)
{
    foreach (var item in Model)
    {
        <div class="btnEdit">
            <p><b><span class="author" id=@item.Id>@item.AuthorMessage</span>  @item.MessagesDate</b></p>
            <p class="editMessage" id=@item.Id contenteditable="true">@item.Message</p>
            <p class="editSave" id=@item.Id style="background-color: aqua; display:none;">Save</p>
            <span class="editDelete" id=@item.Id style="background-color: red; display:none;">Delete</span>
        </div>
    }
}


