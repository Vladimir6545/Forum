@model GeeksForLessForum.Models.TopicsViewModel
@{
    ViewBag.Title = "CreateTopic";
}

<h2>Create Topic</h2>

<div style="text-align:center">
    @using (Html.BeginForm("AddTopic", "Forum", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div>
            <p><b>Topic</b></p>
            <br />
            <p>@Html.ValidationMessageFor(model => model.Topic)</p>
            @Html.TextBox("Topic", null, new { style = "width: 500px;"})
        </div>
        <br />
        <div>
            <p><b>Body</b></p>
            <p>@Html.ValidationMessageFor(model => model.Body)</p>
            @Html.TextArea("Body", null, new { style = "width: 500px;", @cols = 35, @rows = 15, required = "required" })
        </div>
        <br />
        <div>
            <input type="submit" value="Submit" />
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}